### Get All Cards ###
GET http://localhost:8081/card/getCards
Accept: application/json;

> {%
    client.test("Request is 200", function() {
        client.assert(response.status === 200, "Response status is not 200");
    });

    client.global.set("cards", response.body);
    let cards = client.global.get("cards");
    client.global.set("card", cards[0]);
    let card = client.global.get("card");
    client.global.set("card_uuid", card.uuid);
%}

### Get Card by UUID ###
GET http://localhost:8081/card/{{card_uuid}}
Accept: application/json
